{
  "id": "drupal",
  "server_roles": [
    "drupal"
  ],
  "type": {
    "drupal": [
      "drupal::app_repo",
      "nfs::files_app",
      "mod_php_apache2"
    ]
  },
  "database_master_role": [
    "drupal_database_master"
  ],
  "files_master_role": [
    "drupal_files_master"
  ],
  "repository": "http://git.drupal.org/project/drupal.git",
  "revision": {
    "_default": "7.4"
  },
  "force": {
    "_default": false
  },
  "databases": {
    "_default": {
      "reconnect": "true",
      "encoding": "utf8",
      "username": "db_user",
      "adapter": "mysql",
      "password": "awesome_password",
      "database": "drupal_production"
    }
  },
  "mysql_root_password": {
    "_default": "mysql_root"
  },
  "mysql_debian_password": {
    "_default": "mysql_debian"
  },
  "mysql_repl_password": {
    "_default": "mysql_repl"
  },
  "deploy_to": "/srv/drupal",
  "owner": "nobody",
  "group": "nogroup",
  "packages": {
    "php5-mysql": "",
    "php5-intl": ""
  },
  "pears": {
  },
  "local_settings_file": "local_settings.php"
}
