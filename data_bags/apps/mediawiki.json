      "php",
      "mod_php_apache2"
    ]
  },
  "database_master_role": [
    "mediawiki_database_master"
  ],
  "repository": "git://github.com/mediawiki/mediawiki-trunk-phase3.git",
  "revision": {
    "production": "master"
  },
